http {
    server {
        listen  15001 default_server;
        location ^~ /proxy/ {
            proxy_pass http://127.0.0.1:15002/;
        }
        location / {
            index index.html;
            root testdata;
        }
        location ^~ /alias/ {
            alias nginxconf;
        }

        location /hello {
            echo "hello, I'am bingoohuang";
        }

        location /json1 {
            default_type application/json;
            return 200 '{"status":"success","result":"hello world!"}';
        }

        location /json2 {
            default_type application/json;
            echo '{"status":"success","result":"hello world!"}';
        }
    }

    server {
        listen  15002 default_server;
        location / {
            index html/index.html;
        }
        location /demo {
            echo $request;
        }
    }

    server {
        listen  15003;
    }
}